{% extends 'homebase.html.twig' %}
{% block title %}{% endblock %}
{% block keywords%}{% endblock %}
{% block description%}{% endblock %}
{% block body %}
	<!-- Start Bradcaump area -->
	<div class="ht__bradcaump__area" style="background-image: url({{asset('assets/images/02.jpg')}}); background-position: center; background-size: cover;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2>Hakk覺m覺zda</h2>
						<nav class="bradcaump-content">
							<ahref="/">Anasayfa</a>
							<span>/</span>
							<span class="breadcrumb_item active">Hakk覺m覺zda</span>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Bradcaump area -->

	<!-- Start My Account Area -->
	<section class="my_account_area pt--80 pb--55 bg--white">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-12">
					<div class="my__account__wrapper">
						<h3 class="account__title">Register</h3>
						<form name="user1" method="post" enctype="multipart/form-data">


							{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>

							{% else %}
								<div class="account__form">
									<div class="input__box">
										<label for="user1_email">Email address
											<span>*</span>
										</label>
										<input type="text" class="form-control" id="user1_email" name="user1[email]" required="required" maxlength="180">
									</div>
									<div class="input__box">

										<label for="user1_password" class="required">Password<span>*</span>
										</label>
										<input type="password" class="form-control" id="user1_password" name="user1[password]" required="required">
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									</div>
									<div class="input_box">

											<label for="user1_name">Name</label><input type="text" class="form-control" id="user1_name" name="user1[name]" maxlength="50"/>

										
									</div>

                                    <div class="input_box">
											<label for="user1_surname">Surname</label><input type="text" class="form-control" id="user1_surname" name="user1[surname]" maxlength="20"/>

                                    </div>
									<div class="form__btn">
										<button>Register</button>
									</div>
								</div>
							{% endif %}
						</form>
					</div>
				</div>

			</div>
		</div>
	</section>
	<!-- End My Account Area -->
{% endblock %}
