{% extends 'adminbase.html.twig' %}
{% block title %}Shopping Listesi
{% endblock %}
{% block body %}
	<div class="app-container">
		<!-- begin app-nabar -->

		<!-- end app-navbar -->
		<!-- begin app-main -->
			<div
			class="app-main" id="main"> <!-- begin container-fluid -->
			<div
				class="container-fluid">
				<!-- begin row -->
				<div class="row">
					<div
						class="col-md-12 m-b-30">
						<!-- begin page title -->
						<div class="d-block d-sm-flex flex-nowrap align-items-center">
							<div class="page-title mb-2 mb-sm-0">
								<h1>Shopping Goster</h1>

							</div>
							<div class="ml-auto d-flex align-items-center">
								<nav>
									<ol class="breadcrumb p-0 m-b-0">
										<li class="breadcrumb-item">
											<a href="/admin/">
												<i class="ti ti-home"></i>
											</a>
										</li>
										<li class="breadcrumb-item">
											Index
										</li>
										<li class="breadcrumb-item active text-primary" aria-current="page">Shopping</li>
									</ol>
								</nav>
							</div>
						</div>
						<!-- end page title -->


					</div>

				</div>
				<!-- end row -->

				<!--start contact contant-->

				<div class="row">


					<table class="table table-light mb-0">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ shopping[0].id }}</td>
							</tr>
							<tr>
								<th>User Profil</th>
								<td>
									<a href="{{ path('admin_user_show', {'id': shopping[0].userid}) }}">
										{{ shopping[0].uname }}</a>
								</td>
							</tr>
							<tr>
								<th>Alınan Ürün</th>
								<td>
									<a href="{{ path('product_show', {'id':shopping[0].productid}) }}">
										{{ shopping[0].pname }}</a>
								</td>
							</tr>
							<tr>
								<th>Name</th>
								<td>{{ shopping[0].name }}</td>
							</tr>
							<tr>
								<th>Surname</th>
								<td>{{ shopping[0].surname }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ shopping[0].email }}</td>
							</tr>
							<tr>
								<th>Phone</th>
								<td>{{ shopping[0].phone }}</td>
							</tr>

							<tr>
								<th>Amount</th>
								<td>{{ shopping[0].amount }}</td>
							</tr>
							<tr>
								<th>Totalprice</th>
								<td>{{ shopping[0].totalprice }}</td>
							</tr>
							<tr>
								<th>Ip</th>
								<td>{{ shopping[0].ip }}</td>
							</tr>
							<tr>
								<th>Message</th>
								<td>{{ shopping[0].message }}</td>
							</tr>
							<tr>
								<th>Note</th>
								<td>{{ shopping[0].note }}</td>
							</tr>
							<tr>
								<th>Status</th>
								<td>{{ shopping[0].status }}</td>
							</tr>

							<tr>
								<th>Price</th>
								<td>{{ shopping[0].price }}</td>
							</tr>
							<tr>
								<th>Created_at</th>
								<td>{{ shopping[0].created_at ? shopping[0].created_at|date('Y-m-d H:i:s') }}</td>
							</tr>
							<tr>
								<th>Updated At</th>
								<td>{{ shopping[0].updated_at ? shopping[0].updated_at|date('Y-m-d H:i:s') }}</td>
							</tr>
						</tbody>
					</table>


					<a class="btn btn-warning" href="{{ path('admin_shopping_edit', {'id': shopping[0].id}) }}">edit</a>

					<br>
					<br>

				</div>

				<!--end contact contant-->
			</div>
			<!-- end container-fluid -->
		</div>
		<!-- end app-main -->
	</div>
{% endblock %}
