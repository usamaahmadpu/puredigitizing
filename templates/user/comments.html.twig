{% extends 'homebase.html.twig' %}
{% block title %}{% endblock %}
{% block keywords%}{% endblock %}
{% block description%}{% endblock %}
{% block body %}
	<!-- Start Bradcaump area -->
	<div class="ht__bradcaump__area" style="background-image: url({{asset('assets/images/02.jpg')}}); background-position: center; background-size: cover;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2>User Panel</h2>
						<nav class="bradcaump-content">
							<a href="/">Anasayfa</a>
							<span>/</span>
							<span class="breadcrumb_item active">User Panel</span>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Bradcaump area -->
	{% include ('user/usermenu.html.twig') %}
            
				<table class="table">
					<thead>
							<tr>
								<th>Subject</th>
								<th>Comment</th>
								<th>Status</th>
								<th>Title</th>
							</tr>
						</thead>
						<tbody>
							{% for comment in comments %}
								<tr>
									<td>{{ comment.subject }}</td>
									<td>{{ comment.comment }}</td>
									<td>{{ comment.status }}</td>

									<td>
										<a href="{{ path('product_show', {'id':comment.productid}) }}">
											{{ comment.title }}</a>
									</td>
									
									
								</tr>
							</td>
						</tbody>
                        </tr>
				{% else %}
					<tr>
						<td colspan="17">no records found</td>
					</tr>
				{% endfor %}
				</table>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Shop Page -->
{% endblock %}
