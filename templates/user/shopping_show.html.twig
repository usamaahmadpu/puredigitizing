{% extends 'homebase.html.twig' %}
{% block title %}{% endblock %}
{% block keywords%}{% endblock %}
{% block description%}{% endblock %}
{% block body %}
	<!-- Start Bradcaump area -->
	<div class="ht__bradcaump__area" style="background-image: url({{asset('assets/images/02.jpg')}}); background-position: center; background-size: cover;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2>User Panel</h2>
						<nav class="bradcaump-content">
							<a href="/">Anasayfa</a>
							<span>/</span>
							<span class="breadcrumb_item active">User Panel</span>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Bradcaump area -->
	{% include ('user/usermenu.html.twig') %}


	<table class="table">

		<tbody>
			{% for shopping in shoppings %}

				<tr>
					<td>
						<a href="{{ path('admin_user_show', {'id': shopping.userid}) }}">
							{{ shopping.uname }}</a>
					</td>
				</tr>
				<tr>
					<th>Alınan Ürün</th>

					<td>
						<a href="{{ path('product_show', {'id':shopping.productid}) }}">
							{{ shopping.pname }}</a>
					</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ shopping.name }}</td>
				</tr>

				<tr>
					<th>Surname</th>
					<td>{{ shopping.surname }}</td>

				</tr>
				<tr>
					<th>Email</th>
					<td>{{ shopping.email }}</td>

				</tr>
				<tr>
					<th>Phone</th>
					<td>{{ shopping.phone }}</td>

				</tr>
				<tr>
					<th>Amount</th>
					<td>{{ shopping.amount }}</td>

				</tr>
				<tr>
					<th>Totalprice</th>
					<td>{{ shopping.totalprice }}</td>

				</tr>
				<tr>
					<th>Message</th>
					<td>{{ shopping.message }}</td>

				</tr>
				<tr>
					<th>Adress</th>
					<td>{{ shopping.adress }}</td>

				</tr>
				<tr>
					<th>Status</th>
					<td>{{ shopping.status }}</td>
				</tr>
				<tr>
					<th>Created At</th>

					<td>{{ shopping.created_at ? shopping.created_at|date('Y-m-d H:i:s') }}</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="19">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div></div></div></div></div></div></div><!-- End Shop Page -->{% endblock %}
